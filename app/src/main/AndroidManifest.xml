<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    
    <!-- Mapbox permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    
    <!-- SOS functionality permissions -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".GzingApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GzingApp"
        android:networkSecurityConfig="@xml/network_security_config">
        
        <!-- Mapbox configuration -->
        <meta-data
            android:name="com.mapbox.token"
            android:value="@string/mapbox_access_token" />
        <!-- Splash Activity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.GzingApp.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth Activity -->
        <activity
            android:name=".AuthActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.GzingApp" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.GzingApp" />

        <!-- Profile Activity -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:label="Profile"
            android:theme="@style/Theme.GzingApp" />

        <!-- Profile Activity XML -->
        <!-- Temporarily disabled due to compilation issues
        <activity
            android:name=".ProfileActivityXML"
            android:exported="false"
            android:label="Profile"
            android:theme="@style/Theme.GzingApp" />
        -->

        <!-- Map Activity (Main Dashboard) -->
        <activity
            android:name=".MapActivity"
            android:exported="false"
            android:label="GzingApp"
            android:theme="@style/Theme.GzingApp" />

        <!-- Settings Activity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="Settings"
            android:theme="@style/Theme.GzingApp" />

        <!-- Places Activity -->
        <activity
            android:name=".PlacesActivity"
            android:exported="false"
            android:label="Find Places"
            android:theme="@style/Theme.GzingApp" />

        <!-- Landmarks Activity -->
        <activity
            android:name=".LandmarksActivity"
            android:exported="false"
            android:label="Landmarks"
            android:theme="@style/Theme.GzingApp" />

        <!-- Logs Activity -->
        <activity
            android:name=".LogsActivity"
            android:exported="false"
            android:label="Navigation Logs"
            android:theme="@style/Theme.GzingApp" />

        <!-- Navigation History Activity -->
        <activity
            android:name=".NavigationHistoryActivity"
            android:exported="false"
            android:label="Navigation History"
            android:theme="@style/Theme.GzingApp" />

        <!-- Navigation Routes Activity -->
        <activity
            android:name=".NavigationRoutesActivity"
            android:exported="false"
            android:label="Saved Routes"
            android:theme="@style/Theme.GzingApp" />

        <!-- Routes Activity -->
        <activity
            android:name=".RoutesActivity"
            android:exported="false"
            android:label="Routes"
            android:theme="@style/Theme.GzingApp" />

        <!-- Routes Maps Activity -->
        <activity
            android:name=".RoutesMapsActivity"
            android:exported="false"
            android:label="Route Map"
            android:theme="@style/Theme.GzingApp" />

        <!-- Test API Integration Activity -->
        <activity
            android:name=".TestApiIntegrationActivity"
            android:exported="false"
            android:label="API Integration Test"
            android:theme="@style/Theme.GzingApp" />

        <service
            android:name=".LocationNotificationService"
            android:exported="false"
            android:foregroundServiceType="location" />
            
        <receiver
            android:name=".GeofenceBroadcastReceiver"
            android:exported="false" />

        <receiver
            android:name=".StopNavigationReceiver"
            android:exported="false" />

        <service
            android:name=".AlarmSoundService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />
    </application>

</manifest>