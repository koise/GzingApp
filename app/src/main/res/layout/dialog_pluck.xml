<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pluck Location"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This will capture the current map center as a plucked location for navigation purposes."
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvPluckCoordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coordinates: Loading..."
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/cbSavePluck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save this pluck for future use"
        android:layout_marginBottom="8dp" />

</LinearLayout>


