<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/rounded_dialog_background">

    <!-- Warning Icon -->
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_warning"
        android:tint="@color/warning_orange"
        android:layout_marginBottom="16dp"/>

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Safety Confirmation Required"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="12dp"/>

    <!-- Countdown Timer -->
    <TextView
        android:id="@+id/tvCooldownTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="5s"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="@color/warning_yellow"
        android:layout_marginVertical="16dp"/>

    <!-- Message -->
    <TextView
        android:id="@+id/tvCooldownMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you're safe?\n\nIf you don't respond in 5 seconds, emergency SMS will be sent automatically."
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- Confirm Safe Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirmSafe"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="âœ… Yes, I'm Safe"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/success_green"/>

</LinearLayout>

