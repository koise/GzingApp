RewriteEngine On

# Handle GET requests for getuser
RewriteCond %{REQUEST_METHOD} ^GET$
RewriteCond %{QUERY_STRING} ^id=([0-9]+)$
RewriteRule ^getuser$ getuser.php?id=%1 [L,QSA]

# Handle POST requests for getuser
RewriteCond %{REQUEST_METHOD} ^POST$
RewriteRule ^getuser$ getuser.php [L]

# Handle OPTIONS requests for getuser
RewriteCond %{REQUEST_METHOD} ^OPTIONS$
RewriteRule ^getuser$ getuser.php [L]

# Handle GET requests for updateUsers
RewriteCond %{REQUEST_METHOD} ^GET$
RewriteCond %{QUERY_STRING} ^id=([0-9]+)$
RewriteRule ^updateUsers$ updateUsers.php?id=%1 [L,QSA]

# Handle POST requests for updateUsers
RewriteCond %{REQUEST_METHOD} ^POST$
RewriteRule ^updateUsers$ updateUsers.php [L]

# Handle OPTIONS requests for updateUsers
RewriteCond %{REQUEST_METHOD} ^OPTIONS$
RewriteRule ^updateUsers$ updateUsers.php [L]

# Default fallback for getuser
RewriteRule ^getuser$ getuser.php [L,QSA]

# Default fallback for updateUsers
RewriteRule ^updateUsers$ updateUsers.php [L,QSA]
